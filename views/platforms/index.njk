{% extends "layout/index.njk" %}

{% block title %}
  <title>Platforms</title>
{% endblock %}

{% block css %}
  <style>
#platformsContainer{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 5vh;
}
#cards{
  display: flex;
  flex-direction: row;
  width: 100vw;
  justify-content: space-around;
  margin: 10vh;
}  
  </style>
{% endblock %}

{% block content %}
<div id="platformsContainer">
  <h1>Platforms</h1>
<div id="cards">
  {% for platform in platforms %}

<div class="card" style="width: 18vw;">
  <img class="card-img-top" src="{{platform.platform_logo.url}}" alt="{{platform.name}}">
  <div class="card-body">
    <h5 class="card-title">{{platform.name}}</h5>
    <p class="card-text">{{platform.summary}}</p>
    <a href="/platforms/{{platform.slug}}" class="btn btn-primary">See More</a>
  </div>
</div>

  {% endfor %}
  </div>
  </div>

{% endblock %}
