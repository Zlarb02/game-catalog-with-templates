{% extends "layout/index.njk" %}

{% block title %}
  <title>Platforms</title>
{% endblock %}

{% block css %}
 
{% endblock %}

{% block content %}
<div class="jumbotron">
  <h1 >Platforms</h1>
</div>
<div id="cards" class="row">
  {% for platform in platforms %}
    <div id="card" class="col-4">
    <img class="card-img-top" src="{{platform.platform_logo.url}}" alt="{{platform.name}}">
        <div class="card-body">
          <h5 class="card-title">{{platform.name}}</h5>
    
          <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            ‚Ñπ
          </button>
          <div class="collapse" id="collapseExample">
            <div class="card card-body">
              <p class="card-text">{{platform.summary}}</p>
            </div>
          </div>
          <a href="/platforms/{{platform.slug}}" class="btn btn-primary">üîç</a>  
        </div>
    </div>

  {% endfor %}
</div>

{% endblock %}
